<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomAppMenuSwitchStyle">
        <item name="colorControlActivated">@color/bottom_app_menu_switch_activated_color</item>
    </style>

    <style name="BottomAppMenuTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/bottom_app_menu_text_color</item>
        <item name="android:textSize">@dimen/bottom_app_menu_text_size</item>
    </style>

    <style name="BottomAppMenuItemTextStyle" parent="BottomAppMenuTextStyle">
        <item name="android:textColor">@color/bottom_app_menu_item_text_color</item>
    </style>


</resources>